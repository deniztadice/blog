---
import Card from "../../components/Card.astro";
import ListCard from "../../components/ListCard.astro";
import SocialList from "../../components/SocialList.astro";
import Layout from "../../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";
import { localizePath } from "astro-i18next";

changeLanguage("en");
---

<Layout title={t("site.title")}>
  <main class="container mx-auto px-4">
    <h1 class="font-bold text-2xl my-4">{t("site.title")}</h1>

    <ListCard title={t("pages.index_modules")}>
      <Card
        title={t("pages.index_modules_dft")}
        description={t("pages.index_modules_dft_desc")}
        route={localizePath("/modules/dft")}
      />
    </ListCard>

    
    <!-- {
        curLang === 'en' ? undefined :
        <ListCard title={t("pages.index_adventures")}>

        </ListCard>
    } -->

    <SocialList />
  </main>
</Layout>
