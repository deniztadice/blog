---
import Card from "../../../components/Card.astro";
import ListCard from "../../../components/ListCard.astro";
import Layout from "../../../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";
import { localizePath } from "astro-i18next";
import SocialList from "../../../components/SocialList.astro";
import { MODULE_LINK_DFT } from "../../../config";
import Clipboard from "../../../components/Clipboard.astro";

changeLanguage("uk");
---

<Layout title={t("pages.journal")}>
  <main class="container mx-auto px-4">
    <div class="w-11/12 mx-auto my-3 ">
      <Clipboard link={MODULE_LINK_DFT} />
    </div>
    <h1 class="font-bold text-2xl my-4"><a class="text-blue-800 hover:text-blue-600" href={localizePath("/modules/dft")}>{t("pages.index_modules_dft")}</a> - {t("pages.journal")}</h1>

    <ListCard title={t("pages.index_menu")}>
      <Card
        title={t("pages.journal_showcase")}
        description={t("pages.journal_showcase_desc")}
        route={localizePath("/modules/dft/journal/showcase")}
      />
      <Card
        title={t("pages.journal_examples")}
        description={t("pages.journal_examples_desc")}
        route={localizePath("/modules/dft/journal/examples")}
      />
    </ListCard>

    <SocialList />
  </main>
</Layout>
